  <children>
    <MenuBar blendMode="DARKEN" VBox.vgrow="NEVER">
      <menus>
        <Menu mnemonicParsing="false" text="Game">
          <items>
            <!--            todo-->
            <MenuItem mnemonicParsing="false" onAction="#handleUndo" text="Undo" />
            <MenuItem mnemonicParsing="false" onAction="#createNewGame" text="Restart" />
            <MenuItem mnemonicParsing="false" onAction="#createNewGame" text="New game" />
